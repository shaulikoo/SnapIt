<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' type="text/css" href='/stylesheets/style.css'/>
</head>
<body>
<a name="home"></a>
<div class="header_comp">
    <% include templates/header.ejs %>
</div>
<div class="wait_cns">
    <h1>Finish - Loading pics</h1>
    <img class="center" src="/gif/loading_spinner.gif" />
</div>
</div>
<div id="pics" style="display: none">
<h1 style="margin-top: 35px; margin-left: 20px;"><%= title %> :</h1>
<div class="im">
<p></p>
    <table class="center" width="100%" cellspacing="20">
        <tr>
<% image_data.Jimage.forEach(function(item){ %>
<td>
<a href="<%= item.path %>"><img src=<%= item.path %> /></a><br />
    photo number: <%=item.number %>
    ,time stamp: <%=item.timestamps%>
</td>
            <%var place= (item.number+1) %3%>
            <% if (place == 0){%>
            </tr>
            <tr>
            <%}%>
<% }) %>
        </tr>
    </table>
<p></p>
    <h3 class="center"><a href="#home">Up</a></h3>
</div>
</div>
<script src="http://code.jquery.com/jquery-latest.min.js"></script>
<script>
    jQuery(function ($)
    {
        var $wait = $('.wait_cns');
        var $pics = $('#pics');
        $(window).load(function(){
            $wait.hide();
            $pics.show();
        })

    })
</script>
</body>
</html>